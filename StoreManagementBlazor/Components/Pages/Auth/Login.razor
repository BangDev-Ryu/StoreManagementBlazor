@page "/login"
@using StoreManagementBlazor.ViewModels
@inject NavigationManager NavigationManager

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
                <h4>Đăng nhập hệ thống</h4>
            </div>
            <div class="card-body">
                @if (ShowError)
                {
                    <div class="alert alert-danger" role="alert">
                        Tên đăng nhập hoặc mật khẩu không đúng.
                    </div>
                }

                <form action="/login-handler" method="post">
                    <AntiforgeryToken />

                    <div class="mb-3">
                        <label class="form-label">Tên đăng nhập</label>
                        <input type="text" name="Username" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mật khẩu</label>
                        <input type="password" name="Password" class="form-control" required />
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" name="RememberMe" class="form-check-input" value="true" />
                        <label class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery(Name = "error")]
    public string? ErrorCode { get; set; }

    private bool ShowError => ErrorCode == "InvalidCredentials";
}