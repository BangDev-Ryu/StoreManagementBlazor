@page "/shopping"
@rendermode InteractiveServer
@inject ProductService ProductService
@inject NavigationManager Nav
@inject CartService CartService

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Danh sách sản phẩm</h5>

        <button class="btn btn-primary position-relative"
                @onclick="@(() => Nav.NavigateTo("/cart"))">
            Giỏ hàng
            @if (CartService.Items.Any())
            {
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    @CartService.Items.Sum(x => x.Quantity)
                </span>
            }
        </button>
    </div>

    <div class="card-body">

        <!-- SEARCH -->
        <div class="row g-2 mb-3">
            <div class="col-md-3">
                <input class="form-control"
                       placeholder="Sản phẩm / Barcode..."
                       @bind="search"
                       @bind:event="oninput" />
            </div>

            <div class="col-md-3">
                <select class="form-select" @bind="selectedCategoryId">
                    <option value="">-- Danh mục --</option>
                    @foreach (var c in categoryMap)
                    {
                        <option value="@c.Key">@c.Value</option>
                    }
                </select>
            </div>

            <div class="col-md-2">
                <input type="number" class="form-control"
                       placeholder="Giá từ"
                       @bind="minPrice"
                       @bind:event="oninput" />
            </div>

            <div class="col-md-2">
                <input type="number" class="form-control"
                       placeholder="Giá đến"
                       @bind="maxPrice"
                       @bind:event="oninput" />
            </div>

            <div class="col-md-2">
                <button class="btn btn-secondary w-100"
                        @onclick="ClearFilter">
                    Đặt lại
                </button>
            </div>
        </div>

        <!-- TABLE -->
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:60px">STT</th>
                    <th>Tên</th>
                    <th>Mã</th>
                    <th>Danh mục</th>
                    <th>Giá</th>
                    <th>Đơn vị</th>
                    <th class="text-center" style="width:100px">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (PagedProducts.Any())
                {
                    int i = (currentPage - 1) * pageSize + 1;
                    @foreach (var p in PagedProducts)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@p.ProductName</td>
                            <td>@p.ProductId</td>
                            <td>@GetCategoryName(p.CategoryId)</td>
                            <td>@p.Price.ToString("N0") đ</td>
                            <td>@p.Unit</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-warning"
                                        @onclick="() => OpenModal(p)">
                                    ➕
                                </button>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">
                            Không có dữ liệu
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- PAGINATION -->
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                    <button class="page-link"
                            @onclick="() => ChangePage(currentPage - 1)">
                        &laquo;
                    </button>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <button class="page-link"
                                @onclick="() => ChangePage(i)">
                            @i
                        </button>
                    </li>
                }

                <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                    <button class="page-link"
                            @onclick="() => ChangePage(currentPage + 1)">
                        &raquo;
                    </button>
                </li>
            </ul>
        </nav>
    </div>
</div>

<!-- MODAL CHỌN SỐ LƯỢNG -->
@if (showModal)
{
    <div class="modal fade show d-block" style="background:rgba(0,0,0,.5)">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Chọn số lượng</h5>
                    <button class="btn-close" @onclick="CloseModal"></button>
                </div>

                <div class="modal-body">
                    <p class="fw-bold">@selectedProduct?.ProductName</p>
                    <input type="number"
                           class="form-control"
                           min="1"
                           @bind="selectedQuantity" />
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Hủy</button>
                    <button class="btn btn-success" @onclick="ConfirmAddToCart">
                        Thêm
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    List<Product> products = new();
    Dictionary<int, string> categoryMap = new();

    string search = "";
    decimal? minPrice, maxPrice;
    int? selectedCategoryId;

    int currentPage = 1;
    int pageSize = 10;
    int totalPages => (int)Math.Ceiling((double)FilteredProducts.Count() / pageSize);

    Product? selectedProduct;
    int selectedQuantity = 1;
    bool showModal = false;

    protected override async Task OnInitializedAsync()
    {
        products = await ProductService.GetAllAsync();
        var categories = await ProductService.GetCategoriesAsync();
        categoryMap = categories.ToDictionary(x => x.CategoryId, x => x.CategoryName);
    }

    IEnumerable<Product> FilteredProducts =>
        products.Where(p =>
            (string.IsNullOrWhiteSpace(search)
                || p.ProductName.Contains(search, StringComparison.OrdinalIgnoreCase)
                || (p.Barcode != null && p.Barcode.Contains(search))) &&
            (!selectedCategoryId.HasValue || p.CategoryId == selectedCategoryId) &&
            (!minPrice.HasValue || p.Price >= minPrice) &&
            (!maxPrice.HasValue || p.Price <= maxPrice)
        );

    IEnumerable<Product> PagedProducts =>
        FilteredProducts
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize);

    void ChangePage(int page)
    {
        if (page < 1) page = 1;
        if (page > totalPages) page = totalPages;
        currentPage = page;
    }

    void ClearFilter()
    {
        search = "";
        minPrice = maxPrice = null;
        selectedCategoryId = null;
        currentPage = 1;
    }

    string GetCategoryName(int? id)
        => id.HasValue && categoryMap.ContainsKey(id.Value)
            ? categoryMap[id.Value]
            : "";

    void OpenModal(Product product)
    {
        selectedProduct = product;
        selectedQuantity = 1;
        showModal = true;
    }

    void CloseModal() => showModal = false;

    void ConfirmAddToCart()
    {
        if (selectedProduct != null)
        {
            CartService.AddProduct(selectedProduct, selectedQuantity);
        }
        showModal = false;
    }
}
