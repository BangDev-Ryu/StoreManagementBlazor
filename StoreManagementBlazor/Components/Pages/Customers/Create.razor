@page "/customers/create"
@using StoreManagementBlazor.Models
@using StoreManagementBlazor.Services
@inject CustomerService CustomerService
@inject NavigationManager Navigation
@inject Blazored.Toast.Services.IToastService toast

@rendermode InteractiveServer

<h3>Thêm khách hàng</h3>

<div class="card shadow-sm p-4 mt-3">
    <EditForm Model="customer" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <!-- Name -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Tên khách hàng</label>
            <InputText class="form-control" @bind-Value="customer.Name" />
            <ValidationMessage For="@(() => customer.Name)" class="text-danger" />
        </div>

        <!-- Phone -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Số điện thoại</label>
            <InputText class="form-control" @bind-Value="customer.Phone" />
            <ValidationMessage For="@(() => customer.Phone)" class="text-danger" />
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Email</label>
            <InputText class="form-control" @bind-Value="customer.Email" />
            <ValidationMessage For="@(() => customer.Email)" class="text-danger" />
        </div>

        <!-- Address -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Địa chỉ</label>
            <InputTextArea class="form-control" rows="3" @bind-Value="customer.Address" />
            <ValidationMessage For="@(() => customer.Address)" class="text-danger" />
        </div>

        <!-- Buttons -->
        <div class="d-flex gap-2">
            <button class="btn btn-secondary" @onclick="BackToList">Quay lại</button>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </EditForm>
</div>

@code {
    Customer customer = new();

    async Task HandleSubmit()
    {
        var result = await CustomerService.Create(customer);

        if (!result.success)
        {
            toast.ShowError(result.message);
            return;
        }

        toast.ShowSuccess(result.message);

        await Task.Delay(800);
        Navigation.NavigateTo("/customers");
    }

    void BackToList()
    {
        Navigation.NavigateTo("/customers");
    }
}
