@page "/users/create"
@rendermode InteractiveServer
@using StoreManagementBlazor.Models.ViewModels
@using StoreManagementBlazor.Services
@inject UserService UserService
@inject NavigationManager NavManager

<div class="container mt-4">
    <h3>Thêm tài khoản mới</h3>
    
    <div class="card">
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger">@ErrorMessage</div>
            }

            <EditForm Model="Model" OnValidSubmit="HandleCreate">
                <DataAnnotationsValidator />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Tên đăng nhập (*)</label>
                        <InputText class="form-control" @bind-Value="Model.Username" />
                        <ValidationMessage For="() => Model.Username" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Mật khẩu (*)</label>
                        <InputText type="password" class="form-control" @bind-Value="Model.Password" />
                         </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Họ và tên (*)</label>
                        <InputText class="form-control" @bind-Value="Model.FullName" />
                        <ValidationMessage For="() => Model.FullName" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Vai trò</label>
                        <InputSelect class="form-select" @bind-Value="Model.Role">
                            <option value="staff">Nhân viên (Staff)</option>
                            <option value="admin">Quản trị viên (Admin)</option>
                            <option value="customer">Khách hàng (Customer)</option>
                        </InputSelect>
                    </div>
                </div>

                @if (Model.Role == "customer")
                {
                    <div class="card bg-light mt-3 mb-3">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Thông tin khách hàng (Bắt buộc)</h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Số điện thoại (*)</label>
                                    <InputText class="form-control" @bind-Value="Model.Phone" />
                                    <ValidationMessage For="() => Model.Phone" class="text-danger" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Email (*)</label>
                                    <InputText class="form-control" @bind-Value="Model.Email" placeholder="example@gmail.com" />
                                    <ValidationMessage For="() => Model.Email" class="text-danger" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Địa chỉ (*)</label>
                                <InputTextArea class="form-control" @bind-Value="Model.Address" rows="2" />
                                <ValidationMessage For="() => Model.Address" class="text-danger" />
                            </div>
                        </div>
                    </div>
                }

                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Lưu lại</button>
                    <a href="/users" class="btn btn-secondary">Hủy</a>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private UserAdminViewModel Model = new() { Role = "staff" };
    private string? ErrorMessage;

    private async Task HandleCreate()
    {
        // Kiểm tra thêm mật khẩu vì IValidatableObject không check required password cho create
        if (string.IsNullOrEmpty(Model.Password))
        {
            ErrorMessage = "Vui lòng nhập mật khẩu.";
            return;
        }

        var result = await UserService.CreateUserAsync(Model);
        if (result.success)
        {
            NavManager.NavigateTo("/users");
        }
        else
        {
            ErrorMessage = result.message;
        }
    }
}