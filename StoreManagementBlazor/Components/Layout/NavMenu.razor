@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider
@inject StoreManagementBlazor.Services.AuthService AuthService
@inject NavigationManager Nav
@code {
    private bool isLoggedIn;
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        isLoggedIn = authState.User.Identity?.IsAuthenticated == true;
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        isLoggedIn = false;
        StateHasChanged();
        Nav.NavigateTo("/login", forceLoad: true);
    }
}

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">StoreManagementBlazor</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    @if (isLoggedIn)
    {
        <nav class="nav flex-column">
            <div class="nav-item px-3" >
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All" >
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="counter">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="weather">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="promotions">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Promotion
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/products">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Products
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users">
                    <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Users
                </NavLink>
            </div>
           
        </nav>
    }
    else
    {
        <div class="p-3 text-center">
            <b>Bạn chưa đăng nhập.</b>
        </div>
    }
</div>